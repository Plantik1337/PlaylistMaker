<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="messageTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="backButtonStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="settingsButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/grey</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="searchTextEditStyle">
        <item name="android:background">@color/aLittleWhite</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="iconTint">@color/grey</item>
        <item name="drawableTint">@color/grey</item>
    </style>

    <style name="backButtonSearchStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="searchActivityTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="trackListStyle">
        <item name="background">@color/white</item>
    </style>
    <style name="arrowTrackListStyle">
        <item name="android:tint">@color/grey</item>
    </style>
    <style name="songNameTrackListStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
    </style>
    <style name="littleTextStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
    </style>
    <style name="refrashButton">
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/DarkFun</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>